---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '@fontsource-variable/onest';

import Navbar from '../components/Navbar.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="PLASTIGESA E.I.R.L. es una empresa dedicada a la fabricación de empaques flexibles y embalajes en alta y baja densidad. Empresa familiar, 100% arequipeña, lider en fabricación de bolsas plásticas, ofrecemos los mejores productos plasticos para desechos, Plastigesa es la empresa lider en fabricación de bolsas, cintas de amarre, Stretch Film, para uso industrial o agricola, en el hogar, oficina, clinicas y hospitales." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/styles/global.css">
		<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
		<link href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css" rel="stylesheet">
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
		<script src="https://unpkg.com/scrollreveal"></script>
		<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>		
		<script src="/scripts/scrollreveal.js" defer></script>
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>	
		<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>	
		<script type="module" src="https://unpkg.com/ionicons@5.0.0/dist/ionicons/ionicons.esm.js"></script>
	</head>
	<body>
		<Navbar />
		<slot />
		
		<WhatsAppButton />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: 'Onest Variable', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
</style>
